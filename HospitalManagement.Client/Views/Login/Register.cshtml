@model HospitalManagement.Client.DTOs.UserDTOs.UserRegisterDTO
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendanceSystemClient.styles.css" asp-append-version="true" />
    <style>
        body {
            background: #fff
        }

        .card {
            border: none;
            height: 320px
        }
    </style>
</head>


<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5">
                <form id="registerForm" asp-controller="Login" asp-action="Register" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div class="text-danger" role="alert">@ViewData["Errors"]</div>
                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                        <label asp-for="FullName">Name</label>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

</div>
