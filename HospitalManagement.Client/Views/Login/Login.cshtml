@using HospitalManagement.Client.DTOs.UserDTOs;
@model UserLoginDTO
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendanceSystemClient.styles.css" asp-append-version="true" />
    <style>
        body {
            background: #000
        }

        .card {
            border: none;
            height: 320px
        }
    </style>
</head>
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5">
                <form method="post" asp-controller="Login" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="@Model.Password">Email</label>
                        <input class="form-control" asp-for="Email" type="text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password">Password</label>
                        <input class="form-control" type="password" asp-for="@Model.Password" />
                    </div>
                    <span class="text-danger">@ViewBag.LoginError</span>
                    <div class="mb-3" style="margin-top: 10px"> <button type="submit" class="btn btn-success">Login</button> </div>
                </form>
                <div>
                    <p>Don't have an account? <a asp-controller="Login" asp-action="Register">Register</a></p>
                </div>
            </div>            
        </div>
    </div>
</div>
